{
  "name": "@bimeister/pupakit",
  "version": "0.2.0",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://git.bimeister.io/common/pupakit.git"
  },
  "scripts": {
    "autofix": "npm run linter:fix",
    "create-untracked-files": "npm run barrel:all && npm run styling:all",
    "🏗️": "Build",
    "build:kit": "npm run create-untracked-files && ng build --project pupakit && npm run styling:all && npm run bundle:all && npm run replace:all && npm run prepare:package.json",
    "build:demo": "npm run create-untracked-files && ng build --project=demo",
    "build:demo-stage": "npm run create-untracked-files && ng build --project=demo --base-href #",
    "build:demo-ci": "npm run create-untracked-files && ng build --project=demo --base-href \"${CI_PAGES_URL}/\"",
    "🚀": "Run server",
    "start": "npm run create-untracked-files && ng serve --project=demo --open --host 0.0.0.0 --port 4201",
    "🔍": "Linting files",
    "linter:check-ci": "ng lint --configuration=inspection-ci",
    "linter:fix": "ng lint --configuration=debugging",
    "linter:formatting": "npm run formatter:check",
    "linter:spell-checker": "npm run spell-checker:check",
    "linter:circular-dependencies": "node ./node_modules/@bimeister/build-cli/executable.js developer circular-dependencies --path=\"projects\" --ts_config=\"tsconfig.json\"",
    "linter:all": "ng lint --configuration=inspection-ci && npm run formatter:check && npm run linter:spell-checker && npm run linter:circular-dependencies",
    "🧪": "Run autotests",
    "test:ci": "ng run pupakit:test:ci",
    "test:debug": "ng run pupakit:test:debugging",
    "💫": "Replacements",
    "replace:assets-reference:single-quote": "replace-in-file \"/'/assets//g\" \"'~@bimeister/pupakit/assets/\" \"./dist/**/*.*css\" --verbose --isRegex",
    "replace:assets-reference:double-quote": "replace-in-file '/\"/assets//g' '\"~@bimeister/pupakit/assets/' './dist/**/*.*css' --verbose --isRegex",
    "replace:all": "npm run replace:assets-reference:single-quote && npm run replace:assets-reference:double-quote",
    "🥫": "Barrel export files generation",
    "barrel:components": "barrelsby --config ./barrelsby.json --directory ./projects/kit/src/lib/components",
    "barrel:internal": "barrelsby --config ./barrelsby.json --directory ./projects/kit/src/internal",
    "barrel:all": "npm run barrel:components && npm run barrel:internal",
    "💅": "Styling files generation",
    "styling:variables": "ts-node ./build/node/create-adaptive-variables.script.ts",
    "styling:color-maps": "ts-node ./build/node/create-colors-map.script.ts",
    "styling:alpha-color-maps": "ts-node ./build/node/create-alpha-colors-map.script.ts",
    "styling:semantic-color-maps": "ts-node ./build/node/create-semantic-colors-map.script.ts",
    "styling:convert-scss-to-css": "sass --load-path=node_modules ./projects/kit/src/styles/styles.scss ./dist/kit/styles.css",
    "styling:all": "npm run styling:variables && npm run styling:color-maps && npm run styling:alpha-color-maps && npm run styling:semantic-color-maps && npm run styling:convert-scss-to-css",
    "📦": "Bundle generation",
    "bundle:styles": "ts-node ./build/node/copy-styles-to-dist-folder.script.ts",
    "bundle:assets": "ts-node ./build/node/copy-assets-to-dist-folder.script.ts",
    "bundle:all": "ts-node ./build/node/copy-styles-to-dist-folder.script.ts && ts-node ./build/node/copy-assets-to-dist-folder.script.ts",
    "🖼️": "Formatting",
    "formatter:fix": "prettier --loglevel warn --config ./.prettierrc --ignore-path ./.prettierignore --write \"./**/*.{html,css,scss,json,js,ts}\"",
    "formatter:check": "prettier --config ./.prettierrc --ignore-path ./.prettierignore --check \"./**/*.{html,css,scss,json,js,ts}\"",
    "📮": "Package preparation",
    "prepare:.npmrc": "ts-node npmrc-prepare.ts",
    "prepare:npm-files": "ts-node ./build/node/copy-npm-files-to-dist-folder.script.ts",
    "prepare:package.json": "ts-node package-json-prepare.ts",
    "prepare:all": "npm run prepare:.npmrc && npm run prepare:npm-files && npm run prepare:package.json",
    "💬": "Spell checking",
    "spell-checker:check": "cspell lint './projects/**/*.*' --config cspell.json"
  },
  "dependencies": {
    "@angular/cdk": "^14.1.3",
    "@bimeister/event-bus": "0.2.0-68b57267",
    "@bimeister/utilities": "0.2.0-424d04b4",
    "@types/hammerjs": "^2.0.40",
    "ngx-mask": "^11.0.0",
    "rxjs": "^6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-builders/jest": "^14.0.1",
    "@angular-devkit/build-angular": "^14.1.3",
    "@angular-eslint/builder": "^14.0.3",
    "@angular-eslint/eslint-plugin": "^14.0.3",
    "@angular-eslint/eslint-plugin-template": "^14.0.3",
    "@angular-eslint/schematics": "^14.0.3",
    "@angular-eslint/template-parser": "^14.0.3",
    "@angular/animations": "^14.1.3",
    "@angular/cli": "^14.1.3",
    "@angular/common": "^14.1.3",
    "@angular/compiler": "^14.1.3",
    "@angular/compiler-cli": "^14.1.3",
    "@angular/core": "^14.1.3",
    "@angular/forms": "^14.1.3",
    "@angular/language-service": "^14.1.3",
    "@angular/platform-browser": "^14.1.3",
    "@angular/platform-browser-dynamic": "^14.1.3",
    "@angular/router": "^14.1.3",
    "@babel/core": "7.17.2",
    "@types/jest": "^27.0.0",
    "@types/node": "^16.10.0",
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "5.29.0",
    "babel-loader": "^8.1.0",
    "barrelsby": "^2.2.0",
    "cspell": "5.18.4",
    "cspell-dict-lorem-ipsum": "^1.1.2",
    "cspell-dict-russian": "^1.0.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-ban": "^1.5.2",
    "eslint-plugin-deprecation": "^1.2.1",
    "eslint-plugin-editorconfig": "^3.2.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jsdoc": "37.9.1",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-prettier": "^4.0.0",
    "hammerjs": "^2.0.8",
    "jest": "^28.1.3",
    "jest-junit": "^12.0.0",
    "ng-packagr": "^14.2.0",
    "ngx-highlightjs": "^5.0.0",
    "prettier": "^2.4.1",
    "puppeteer": "^8.0.0",
    "randombytes": "^2.1.0",
    "replace-in-file": "^6.0.0",
    "rxjs": "^6.6.0",
    "sass": "^1.26.10",
    "scss-bundle": "^3.1.2",
    "ts-node": "^9.0.0",
    "typescript": "4.6.4"
  }
}
