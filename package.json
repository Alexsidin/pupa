{
  "name": "@bimeister/pupakit",
  "version": "0.2.0",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://git.bimeister.io/common/pupakit.git"
  },
  "scripts": {
    "start": "yarn run start:demo",
    "start:demo": "yarn run create-untracked-files && ng serve --project=demo --open --host 0.0.0.0 --port 4201",
    "build": "npm run build:kit && npm run build:demo",
    "build:kit": "yarn run create-untracked-files && gulp build",
    "build:dev": "yarn run create-untracked-files && ng build --watch",
    "build:demo": "yarn run create-untracked-files && ng build --project=demo",
    "build:demo-stage": "yarn run create-untracked-files && ng build --project=demo --base-href #",
    "build:demo-ci": "yarn run create-untracked-files && ng build --project=demo --base-href \"${CI_PAGES_URL}/\"",
    "build:demo-puppeteer": "gulp build-demo-static",
    "lint": "yarn run lint:inspect",
    "lint:inspect": "ng lint --configuration=inspection",
    "lint:debug": "ng lint --configuration=debugging",
    "lint:ci": "ng lint --configuration=inspection-ci",
    "lint:prettier": "yarn run prettier:check",
    "cspell:check": "cspell lint './projects/**/*.*' --config cspell.json",
    "prettier:format": "prettier --loglevel warn --config ./.prettierrc --ignore-path ./.prettierignore --write \"./**/*.{html,css,scss,json,js,ts}\"",
    "prettier:check": "prettier --config ./.prettierrc --ignore-path ./.prettierignore --check \"./**/*.{html,css,scss,json,js,ts}\"",
    "prettify": "yarn run prettier:format && yarn run lint:debug",
    "test": "yarn run test:debug",
    "test:debug": "ng test --configuration=debugging",
    "test:ci": "yarn run build:demo-puppeteer && ng test --configuration=ci",
    "autofix": "yarn run prettify & yarn run cspell:check",
    "create-untracked-files": "npm run barrel:all && npm run styling:all",
    "ðŸ¥«": "Barrel export files generation",
    "barrel:components": "barrelsby --config ./barrelsby.json --directory ./projects/kit/src/lib/components",
    "barrel:internal": "barrelsby --config ./barrelsby.json --directory ./projects/kit/src/internal",
    "barrel:all": "npm run barrel:components && npm run barrel:internal",
    "ðŸ’…": "Styling files generation",
    "styling:variables": "ts-node ./build/native/create-adaptive-variables.script.ts",
    "styling:color-maps": "ts-node ./build/native/create-colors-map.script.ts",
    "styling:all": "npm run styling:variables && npm run styling:color-maps"
  },
  "dependencies": {
    "@angular/cdk": "~12.2.6",
    "@types/hammerjs": "^2.0.40",
    "ag-grid-angular": "^23.1.1",
    "ag-grid-community": "^23.1.1",
    "ngx-mask": "^11.0.0",
    "rxjs": "^6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4",
    "@bimeister/event-bus": "0.2.0-68b57267",
    "@bimeister/utilities": "0.2.0-2aff75c4-dev"
  },
  "devDependencies": {
    "@angular-builders/jest": "^12.0.0",
    "@angular-devkit/build-angular": "^12.2.7",
    "@angular-eslint/builder": "12.5.0",
    "@angular-eslint/eslint-plugin": "12.5.0",
    "@angular-eslint/eslint-plugin-template": "12.5.0",
    "@angular-eslint/schematics": "12.5.0",
    "@angular-eslint/template-parser": "12.5.0",
    "@angular/animations": "~12.2.7",
    "@angular/cli": "~12.2.7",
    "@angular/common": "~12.2.7",
    "@angular/compiler": "~12.2.7",
    "@angular/compiler-cli": "~12.2.7",
    "@angular/core": "~12.2.7",
    "@angular/forms": "~12.2.7",
    "@angular/language-service": "~12.2.7",
    "@angular/platform-browser": "~12.2.7",
    "@angular/platform-browser-dynamic": "~12.2.7",
    "@angular/router": "~12.2.7",
    "@babel/core": "^7.15.5",
    "@bimeister/build-cli": "0.1.0-c869ab81",
    "@types/jest": "^27.0.0",
    "@types/node": "^14.0.0",
    "@typescript-eslint/eslint-plugin": "4.28.2",
    "@typescript-eslint/parser": "4.28.2",
    "babel-loader": "^8.1.0",
    "barrelsby": "^2.2.0",
    "cspell": "^5.0.0",
    "cspell-dict-lorem-ipsum": "^1.1.2",
    "cspell-dict-russian": "^1.0.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-ban": "^1.5.2",
    "eslint-plugin-deprecation": "^1.2.1",
    "eslint-plugin-editorconfig": "^3.2.0",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jsdoc": "latest",
    "eslint-plugin-prefer-arrow": "latest",
    "eslint-plugin-prettier": "^4.0.0",
    "gulp": "^4.0.2",
    "hammerjs": "^2.0.8",
    "jest": "^27.0.0",
    "jest-junit": "^12.0.0",
    "ng-packagr": "^12.0.0",
    "ngx-highlightjs": "^5.0.0",
    "prettier": "^2.4.1",
    "puppeteer": "^8.0.0",
    "randombytes": "^2.1.0",
    "replace-in-file": "^6.0.0",
    "rxjs": "^6.6.0",
    "sass": "^1.26.10",
    "scss-bundle": "^3.1.2",
    "ts-node": "^9.0.0",
    "typescript": "~4.3.4",
    "yarn": "1.22.17"
  },
  "browser": {
    "fs": false,
    "zlib": false,
    "path": false,
    "child_process": false,
    "fancy-log": false,
    "console": false
  }
}
