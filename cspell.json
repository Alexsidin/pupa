{
  "version": "0.1",
  // language - current active spelling language
  "language": "en, ru",
  // words - list of words to be always considered correct
  "words": ["ngsw", "ngxs"],
  // flagWords - list of words to be always considered incorrect
  // This is useful for offensive words and common spelling errors.
  // For example "hte" should be "the"
  "flagWords": [],
  "ignoreRegExpList": ["CStyleComment"],
  // "maxNumberOfProblems": 0
  "ignorePaths": [
    "**/node_modules/**",
    "**/assets/**",
    "**/dist/**",
    "**/index.html",
    "**/ngsw-config.json",
    "*.xml",
    "*.svg",
    "*.shader.ts",
    "*.spec.ts",
    "*.mock.ts"
  ],
  "dictionaries": ["en_us", "en-gb", "typescript", "node", "css", "bash", "softwareTerms", "localTerms"],
  "dictionaryDefinitions": [
    {
      "name": "localTerms",
      "description": "local terms",
      "path": "./cspell.local-terms.txt"
    }
  ]
}
